<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="20"
    android:background="@color/my_background"
    android:backgroundTintMode="screen"
    android:gravity="center|top"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:outlineProvider="none"
    android:persistentDrawingCache="scrolling"
    app:layout_scrollFlags="scroll"
    tools:context=".RegisterActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="RideHub"

        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add new item"
        android:textColor="@color/white"
        android:textSize="18dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="36dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="name"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/carname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:ems="10"
                android:textColorHint="#b0b0b0"
                android:padding="8dp"
                android:hint="Enter car name"
                android:inputType="text"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Number plate"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/numplate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:padding="8dp"
                android:hint="Enter vehicle number plate"
                android:textColorHint="#b0b0b0"
                android:inputType="text"
                android:background="@color/white"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Primary payment"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/primarypay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:padding="8dp"
                android:hint="Enter primary payment"
                android:inputType="number"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textColorHint="#b0b0b0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Amount of 1km price"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/distance"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:padding="8dp"
                android:hint="Enter amount of 1km price"
                android:inputType="number"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textColorHint="#b0b0b0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="choose image"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginTop="20dp"   />

            <ImageView
                android:id="@+id/carimg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:background="@color/white"
                android:src="@drawable/addcar" />


            <Button
                android:id="@+id/addbutton"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="ADD"
                android:textColor="@color/white"
                app:rippleColor="@color/cardview_light_background"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                tools:layout_editor_absoluteX="115dp"
                tools:layout_editor_absoluteY="579dp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>