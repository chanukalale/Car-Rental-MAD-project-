<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="20"
    android:background="@color/my_background"
    android:backgroundTintMode="screen"
    android:gravity="center|top"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:outlineProvider="none"
    android:persistentDrawingCache="scrolling"
    app:layout_scrollFlags="scroll"
    tools:context=".RegisterActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="RideHub"

        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Buy your item"
        android:textColor="@color/white"
        android:textSize="18dp" />
    <Button
        android:id="@+id/calculater_to_go"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Calculater"
        android:textColor="@color/white"
        app:rippleColor="@color/cardview_light_background"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="?attr/colorOnPrimaryContainer"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="579dp" />

    <Button
        android:id="@+id/Contact_us"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Contact Us"
        android:textColor="@color/white"
        app:rippleColor="@color/cardview_light_background"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="?attr/colorOnPrimaryContainer"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="579dp" />
    <Button
        android:id="@+id/feedback_customer"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Feedback"
        android:textColor="@color/white"
        app:rippleColor="@color/cardview_light_background"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="?attr/colorOnPrimaryContainer"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="579dp" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/home_backg"
            android:padding="20dp"
            android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected item:"
                android:textColor="@color/black"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/selectedCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxx"
                android:layout_marginStart="14dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number Plate :"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/numPlate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxx"
                android:layout_marginStart="14dp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:textSize="20dp" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primary payment :"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/pp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lkr"
                    android:textColor="@color/black"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount of 1km price :"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/aop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lkr"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="7dp"
                android:textSize="20dp" />
        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Start Date"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/sDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:padding="8dp"
                android:gravity="center"
                android:hint="Select end date"
                android:inputType="number"
                android:background="@color/white"
                android:textColor="@color/black" />

            <CalendarView
                android:id="@+id/sCal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#D8D8D8"/>
            <TextView
                android:id="@+id/sDateDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Done"
                android:background="@color/black"
                android:textColor="@color/white"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="End Date"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/eDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:padding="8dp"
                android:gravity="center"
                android:hint="Select end date"
                android:inputType="number"
                android:background="@color/white"
                android:textColor="@color/black" />
            <CalendarView
                android:id="@+id/eCal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#D8D8D8"/>
            <TextView
                android:id="@+id/eDateDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Done"
                android:background="@color/black"
                android:textColor="@color/white"
                android:padding="8dp"/>

            <Button
                android:id="@+id/rent"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="RENT"
                android:textColor="@color/white"
                app:rippleColor="@color/cardview_light_background"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/my_background"
                tools:layout_editor_absoluteX="115dp"
                tools:layout_editor_absoluteY="579dp" />

        </LinearLayout>




    </ScrollView>

</LinearLayout>